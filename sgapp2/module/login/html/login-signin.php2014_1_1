  var password=$('form#frmStudent #password').val();

	$.ajax({
	
		type: "POST",
		url: "<?=DIR_WS_SITE?>?page=login-ajax",
		data:"mode=databaseConnectIndividual&useremail="+useremail+"&password="+password,
		
		success: function(output)
		 {alert(output);
		  if(output==1)
		  {
		  
		   $('#frmStudent').submit();
